  <script>
    function postQuestion() {
      const form = document.forms["post"];
      const data = {
        title: form.title.value,
        content: form.content.value,
        categoryId: form.categoryId.value,
      };

      axios({
        url: "/questions/write",
        method: "POST",
        data: data,
      }).then(function (res) {
        console.log(res);
      });
    }
